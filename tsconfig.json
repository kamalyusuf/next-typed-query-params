{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2022",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "declarationMap": false,
    "composite": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
